### Zathurarc with transparency

set selection-clipboard clipboard
set window-title-basename 'true'
set selection-clipboard 'clipboard'
set recolor 'true'
set recolor-keephue 'false'
set recolor-reverse-video 'false'

set highlight-transparency .3

set default-bg rgba(13,19,18,0.8)
set default-fg                  "#c0caf5"

set statusbar-fg                "#c0caf5"
set statusbar-bg                "#15161e"

set inputbar-bg                 "#c0caf5"
set inputbar-fg                 "#15161e"

set notification-bg             "#c0caf5"
set notification-fg             "#414868"

set notification-error-bg       "#15161e"
set notification-error-fg       "#db4b4b"

set notification-warning-bg     "#1d1f21"
set notification-warning-fg     "#db4b4b"

set highlight-color             "#ff9e64"
set highlight-active-color      "#2ac3de"

set completion-bg               "#282a2e"
set completion-fg               "#3971ED"

set completion-highlight-fg     "#ffffff"
set completion-highlight-bg     "#3971ED"

set recolor-lightcolor          "#1a1b26"
set recolor-darkcolor           "#c0caf5"

set recolor-lightcolor rgba(0,0,0,0)
